<h1>Blog Posts</h1>
<% @posts.each do |post| %>
<div class="col-lg-6 col-md-6 col-xs-12">
        <div class="well">
            <h3><%= post.title %></h3>
            <p><%= post.body %></p>
            <%= link_to "Read More", post_path(post), :class => 'btn btn-default' %>
        </div>
</div>
<% end %>
